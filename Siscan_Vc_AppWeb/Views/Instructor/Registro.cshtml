@{
    ViewData["Title"] = "Registro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Siscan_Vc_AppWeb.Models.ViewModels
@model ModelViewInstructor

<div class="container pt-6">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header fondomenu ">
                    <img class="img-fluid mover2" src="~/img/agregar-usuario.png" alt="Alternate Text" width="40">
                    <h3 class="text-center font-dark-light my-4">Registro</h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Registro">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="OpcSeleccionada" asp-items="@Model.OpcionesTpDoc" class="form-control form-control-sm" id="cboTipoDocumento">
                                        <option>Selecciona un tipo de documento...</option>
                                    </select>
                                    <label asp-for="OpcSeleccionada">Tipo Documento</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input asp-for="Instructor.NumeroDocumentoInstructor" class="form-control" id="inputDocumento" type="text" placeholder="Ingresa tu numero de documento" />
                                    <label asp-for="Instructor.NumeroDocumentoInstructor">Numero de documento</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input asp-for="Instructor.NombreInstructor" class="form-control" id="inputName" type="text" placeholder="Ingresa tus nombres" />
                                    <label asp-for="Instructor.NombreInstructor">Nombres</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Instructor.ApellidoInstructor" class="form-control" id="inputLastName" type="text" placeholder="Ingresa tus apellidos" />
                                    <label asp-for="Instructor.ApellidoInstructor">Apellidos</label>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input asp-for="Instructor.CelInstructor" class="form-control" id="inputTelefono" type="tel" placeholder="Ingresa tu telefono" />
                                    <label asp-for="Instructor.CelInstructor">Telefono</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Instructor.CorreoInstructor" class="form-control" id="inputEmail" type="email" placeholder="name@example.com" />
                                    <label asp-for="Instructor.CorreoInstructor">Correo</label>
                                </div>
                            </div>
                        </div>
                        <div class="mt-4 mb-0">
                            <div class="d-grid boton2">
                                <button type="submit" class="btn text-center btn-block" data-bs-toggle="modal" onclick="return confirmSave()">Registrar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/scripts.js" asp-append-version="true"></script>
    <script src="~/js/validations.js" asp-append-version="true"></script>

    <script>
        function confirmSave() {
            return confirm("¿Estás seguro de que deseas guardar?")
        }

        $(document).ready(function () {
            $("#confirmarRegistroBtn").click(function () {
                // Aquí puedes realizar una llamada Ajax para realizar el registro
                // Por ahora, simularemos el registro exitoso
                var registroExitoso = true; // Cambia a false para simular un registro fallido

                if (registroExitoso) {
                    // Mostrar alerta de registro exitoso
                    alert("¡Registro exitoso!");

                } else {
                    // Mostrar alerta de fallo de registro
                    alert("No se pudo completar el registro. Inténtalo de nuevo.");
                }

                // Cierra el modal
                $("#confirmacionRegistroModal").modal('hide');
            });
        });
    </script>

}