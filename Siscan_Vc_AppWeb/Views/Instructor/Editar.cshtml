@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Siscan_Vc_AppWeb.Models.ViewModels.ModelViewInstructor

<div class="container pt-6">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header fondomenu ">
                    <img class="img-fluid mover2" src="~/img/actualizar blanco.png" alt="Alternate Text" width="50">
                    <h3 class="text-center font-dark-light my-4">Actualizar</h3>
                </div>
                <div class="card-body">
                    @if (TempData["InstructorActualizado"] != null)
                    {
                        <div class="alert alert-success" role="alert"> @TempData["InstructorActualizado"] </div>
                        <script>
                            setTimeout(function () {
                                window.location.href = '@Url.Action("Consultar", "Instructor")';
                            }, 3000);
                        </script>
                    }
                    <form asp-controller="Instructor" asp-action="Editar">                       
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="Instructor.IdTipodocumento" asp-items="Model.OpcionesTpDoc" class="form-control form-control-sm" id="cboTipoDocumento">
                                        <option>Selecciona un tipo de documento...</option>
                                    </select>
                                    <label asp-for="Instructor.IdTipodocumento">Tipo Documento</label>
                                    <span asp-validation-for="OpcSeleccionada" id="tipoDocumentoError" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input asp-for="Instructor.NumeroDocumentoInstructor" class="form-control" id="inputDocumento" type="text" readonly placeholder="Ingresa tu numero de documento" />
                                    <label asp-for="Instructor.NumeroDocumentoInstructor" for="inputName">Numero de documento</label>
                                    <span asp-validation-for="Instructor.NumeroDocumentoInstructor" id="numeroDocumentoError" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input asp-for="Instructor.NombreInstructor" class="form-control" id="inputName" type="text" placeholder="Ingresa tus nombres" />
                                    <label asp-for="Instructor.NombreInstructor" for="inputName">Nombres</label>
                                    <span asp-validation-for="Instructor.NombreInstructor" id="NameError" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Instructor.ApellidoInstructor" class="form-control" id="inputLastName" type="text" placeholder="Ingresa tus apellidos" />
                                    <label asp-for="Instructor.ApellidoInstructor" for="inputLastName">Apellidos</label>
                                    <span asp-validation-for="Instructor.ApellidoInstructor" id="inputLastNameError" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input asp-for="Instructor.CelInstructor" class="form-control" id="inputTelefono" type="tel" placeholder="Ingresa tu telefono" />
                                    <label asp-for="Instructor.CelInstructor" for="inputTelefono">Telefono</label>
                                    <span asp-validation-for="Instructor.CelInstructor" id="telefonoError" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Instructor.CorreoInstructor" class="form-control" id="inputEmail" type="email" placeholder="name@example.com" />
                                    <label asp-for="Instructor.CorreoInstructor" for="inputEmail">Correo</label>
                                    <span asp-validation-for="Instructor.CorreoInstructor" id="inputEmailError" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="mt-4 mb-0">
                            <div class="d-grid boton2">
                                <button type="submit" class="btn text-center btn-block" style="font-size:20px" onclick="return confirmUpdate()">Actualizar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/scripts.js" asp-append-version="true"></script>

    <script>
        function confirmUpdate() {
            return confirm("¿Estás seguro de que deseas Actualizar?");
        }
    </script>
}



