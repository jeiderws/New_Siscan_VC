@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Siscan_Vc_AppWeb.Models.ViewModels.ModelViewProgra

<div class="container pt-6">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header fondomenu ">
                    <img src="~/img/graduacion.png" alt="Alternate Text" width="70" />
                    <h6 class="m-0 text-uppercase font-weight-bold text-white ">Actualizar Programa</h6>
                </div>
                <div class="card-body">
                    @if (TempData["AlertProAdd"] != null)
                    {
                        <div class="alert alert-success" role="alert"> @TempData["AlertProAdd"] </div>
                        <script>
                            setTimeout(function () {
                                window.location.href = '@Url.Action("Consultar", "Programas")';
                            }, 3000);
                        </script>
                    }
                    <div class="" style="height: 320px !important;">
                        <div class="card-body">
                            <form asp-action="Editar">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-floating mb-3">
                                            <select asp-for="programas.IdNivelPrograma" asp-items="Model.listaopcNivel" class="form-control form-control-sm" id="cboNivel">
                                                <option>Selecciona el Nivel del Programa...</option>
                                            </select>
                                            <label asp-for="opcseleccionadaNivel">Nivel Programa</label>
                                            <span asp-validation-for="programas.IdNivelPrograma" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating mb-3 mb-md-0">
                                            <input asp-for="programas.CodigoPrograma" class="form-control" id="inputCod" type="text" placeholder="Codigo Del Programa" readonly />
                                            <label asp-for="programas.CodigoPrograma">Codigo Del Programa</label>
                                            <span asp-validation-for="programas.CodigoPrograma" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating mb-3 mb-md-0">
                                            <input asp-for="programas.NombrePrograma" class="form-control" id="inputName" type="text" placeholder="Nombre Del Programa" />
                                            <label asp-for="programas.NombrePrograma">Nombre Del Programa</label>
                                            <span asp-validation-for="programas.NombrePrograma" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating mb-3">
                                            <select asp-for="programas.IdEstadoPrograma" asp-items="Model.listaopcEstado" class="form-control form-control-sm" id="cboEstado">
                                                <option>Selecciona el Nivel del Programa...</option>
                                            </select>
                                            <label asp-for="opcseleccionadaEstado">Estado Programa</label>
                                            <span asp-validation-for="programas.IdEstadoPrograma" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-4 mb-0">
                                    <div class="d-grid boton2"><button type="submit" class="btn text-center btn-block" onclick="return confirmCrear()">Actualizar</button></div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
