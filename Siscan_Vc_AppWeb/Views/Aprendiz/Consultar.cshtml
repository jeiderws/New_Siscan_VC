@{
    ViewData["Title"] = "Consultar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Siscan_Vc_AppWeb.Models.ViewModels.ViewModelAprendiz>

@section Estilos {
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="fondomenu py-3 px-5">
                    <h6 class="m-0 text-uppercase font-weight-bold text-white ">  Aprendices</h6>

                </div>

                @*  <br />
                <br /> *@
                <div class="col-md-6 py-3 px-5">

                    <form class="d-none d-md-inline-block form-inline mb-4">
                        <div class="input-group">
                            <input class="form-control" type="text" placeholder="Search for..." aria-label="Search for..." aria-describedby="btnNavbarSearch" width="150" />
                            <button class="boton" id="btnNavbarSearch">Buscar</button>

                        </div>

                    </form>

                </div>
                @* <br /> *@

                <div class="card-body table-responsive" style="overflow-y: auto;height:450px">
                    <table class="table table-bordered mb-4" id="datatablesSimple" cellspacing="1" style="width:100%" >
                        <thead class="boton2 ms-auto">
                            <tr>
                                <th>Tipo Documento</th>
                                <th>Documento</th>
                                <th>Nombres</th>
                                <th>Apellidos</th>
                                <th>Telefono</th>
                                <th>Correo</th>
                                <th>ficha</th>
                                <th>Estado Aprendiz</th>
                                <th>Estado pruebas tyt</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody >
                            @foreach (var aprendiz in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(a => aprendiz.nombredoc)</td>
                                    <td>@Html.DisplayFor(a => aprendiz.NumeroDocumentoAprendiz)</td>
                                    <td>@Html.DisplayFor(a => aprendiz.NombreAprendiz)</td>
                                    <td>@Html.DisplayFor(a => aprendiz.ApellidoAprendiz)</td>
                                    <td>@Html.DisplayFor(a => aprendiz.CelAprendiz)</td>
                                    <td>@Html.DisplayFor(a => aprendiz.CorreoAprendiz)</td>
                                    <td>@Html.DisplayFor(a => aprendiz.Ficha)</td>
                                    <td>@Html.DisplayFor(a => aprendiz.nomEstadoAprendiz)</td>
                                    <td>@Html.DisplayFor(a => aprendiz.nomEstadoTyt)</td>
                                    <td>
                                        <a class="btn  btn-sm" href="@Url.Action("Editar","Aprendiz")">
                                            <img src="~/img/editar.png" alt="Alternate Text" width="30" />
                                        </a>
                                        <a class="btn btn-sm">
                                            <img src="~/img/borrar (1).png" alt="Alternate Text" width="30" data-bs-toggle="modal" data-bs-target="#confirmacionEliminacionModal" />
                                        </a>
                                    </td>
                                </tr>
                            }



                        </tbody>
                    </table>
                     
                </div>
                 <img class="img-fluid mover1" src="~/img/aprendicesena.png" alt="Alternate Text" width="400" /> 
            </div>
        </div>
    </div>
</div>

<!-- Modal de confirmación de Consultar -->
<div class="modal fade" id="confirmacionEliminacionModal" tabindex="-1" aria-labelledby="confirmacionEliminacionModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header fondo3">
                <h5 class="modal-title " id="confirmacionEliminacionModallabel">Confirmación de Eliminacion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ¿Está seguro de que desea eliminar?
                se eliminara permanentemente.
            </div>
            <div class="modal-footer boton2">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                <a href="@Url.Action("consultar", "Aprendiz")" class="btn btn-primary" id="confirmarEliminacionBtn">Eliminar</a>
            </div>
        </div>
    </div>
</div>


@section Scripts {

    <script>
        $(document).ready(function () {
            $("#confirmarEliminacionBtn").click(function () {

                var eliminadoExitoso = true;

                if (eliminadoExitoso == true) {

                    alert("¡Eliminado exitoso!");

                } else {

                    alert("No se pudo completar el eliminado. Inténtalo de nuevo.");
                }

                $("#confirmacionEliminacionModal").modal('hide');
            });
        });
    </script>
    <script src="~/js/scripts.js" asp - append - version="true"></script>

}

