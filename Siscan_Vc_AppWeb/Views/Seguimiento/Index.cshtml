@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Siscan_Vc_AppWeb.Models.ViewModels.Viewmodelsegui
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="fondomenu py-3 px-5">
                    <h6 class="m-0 text-uppercase font-weight-bold text-white ">Seguimiento</h6>
                </div>
                <div class="col-md-6 py-3 px-5">
                    <form method="get" class="d-none d-md-inline-block form-inline mb-4" asp-controller="Seguimiento" asp-action="Index">
                        <div class="input-group">
                            <input class="form-control" name="numdoc" type="text" placeholder="Número Documento..." aria-label="Número Documento..." aria-describedby="btnNavbarSearch" width="150" />
                            <button type="submit" class="boton" id="btnNavbarSearch">Buscar</button>
                        </div>
                    </form>
                </div>
                <div class="card-body table-responsive">
                    @if (TempData["MensajeAlertMAxSegui"] != null)
                    {
                        <div class="alert alert-danger" role="alert"> @TempData["MensajeAlertMAxSegui"] </div>
                    }
                    <h6 style="color:#666264" class="m-0 text-uppercase font-weight-bold text-center ">Resultado de la búsqueda </h6>
                    <div class="card-body table-responsive-busqueda">
                        <table class="table table-bordered mb-4" id="tbdata" cellspacing="1" style="width:100%">
                            <thead class="boton2 ms-auto">
                                <tr>
                                    <th>Ficha</th>
                                    <th>Tipo Documento</th>
                                    <th>Documento</th>
                                    <th>Nombres</th>
                                    <th>Apellidos</th>
                                    <th>Número Celular</th>
                                    <th>Correo</th>
                                    <th>Acudiente</th>
                                    <th>Telefono acudiente</th>
                                    <th>Correo Acudiente</th>
                                    <th>Estado Aprendiz</th>
                                    <th>Estado pruebas TYT</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    if (Model.aprendizSegui != null && Model.aprendizSegui.NumeroDocumentoAprendiz != null)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(a => Model.aprendizSegui.Ficha)</td>
                                            <td>@Html.DisplayFor(a => Model.aprendizSegui.Tipodocumento)</td>
                                            <td>@Html.DisplayFor(a => Model.aprendizSegui.NumeroDocumentoAprendiz)</td>
                                            <td>@Html.DisplayFor(a => Model.aprendizSegui.NombreAprendiz)</td>
                                            <td>@Html.DisplayFor(a => Model.aprendizSegui.ApellidoAprendiz)</td>
                                            <td>@Html.DisplayFor(a => Model.aprendizSegui.CelAprendiz)</td>
                                            <td>@Html.DisplayFor(a => Model.aprendizSegui.CorreoAprendiz)</td>
                                            <td>@Html.DisplayFor(a => Model.aprendizSegui.NombreCompletoAcudiente)</td>
                                            <td>@Html.DisplayFor(a => Model.aprendizSegui.CelularAcudiente)</td>
                                            <td>@Html.DisplayFor(a => Model.aprendizSegui.CorreoAcuediente)</td>
                                            <td>@Html.DisplayFor(a => Model.aprendizSegui.nomEstadoAprendiz)</td>
                                            <td>@Html.DisplayFor(a => Model.aprendizSegui.nomEstadoTyt)</td>
                                            <td>
                                                <a class="btn btn-success" asp-action="Crear" asp-controller="Seguimiento" asp-route-nmDoc="@Model.aprendizSegui.NumeroDocumentoAprendiz">Seguimiento</a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <hr />
                    @if (TempData["MensajeAlertEliminado"] != null)
                    {
                        <div class="alert alert-danger" role="alert"> @TempData["MensajeAlertEliminado"] </div>
                    }
                    <div class="card-body">
                        <div class="col-md-6 text-end">
                            <input style="margin-left:15px;" type="text" class="form-control" id="searchInput" placeholder="Buscar por ficha" />
                        </div>
                    </div>
                    <h6 style="color:#666264" class="m-0 text-uppercase font-weight-bold text-center ">Contenido</h6>
                    <div class="card-body table-responsive" style="height:450px; ">                       
                        <table class="table table-bordered mb-4" id="tbdata2" cellspacing="1" style="width:100%">
                            <thead class="boton2 ms-auto">
                                <tr>
                                    <th>Ficha</th>
                                    <th>Tipo Documento</th>
                                    <th>Documento</th>
                                    <th>Nombres</th>
                                    <th>Apellidos</th>
                                    <th>Número Celular</th>
                                    <th>Correo</th>
                                    <th>Acudiente</th>
                                    <th>Telefono acudiente</th>
                                    <th>Correo Acudiente</th>
                                    <th>Estado Aprendiz</th>
                                    <th>Estado Pruebas TYT</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var aprendiz in Model.listaAprendizSinSegui)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(a => aprendiz.Ficha)</td>
                                            <td>@Html.DisplayFor(a => aprendiz.nombredoc)</td>
                                            <td>@Html.DisplayFor(a => aprendiz.NumeroDocumentoAprendiz)</td>
                                            <td>@Html.DisplayFor(a => aprendiz.NombreAprendiz)</td>
                                            <td>@Html.DisplayFor(a => aprendiz.ApellidoAprendiz)</td>
                                            <td>@Html.DisplayFor(a => aprendiz.CelAprendiz)</td>
                                            <td>@Html.DisplayFor(a => aprendiz.CorreoAprendiz)</td>
                                            <td>@Html.DisplayFor(a => aprendiz.NombreCompletoAcudiente)</td>
                                            <td>@Html.DisplayFor(a => aprendiz.CelularAcudiente)</td>
                                            <td>@Html.DisplayFor(a => aprendiz.CorreoAcuediente)</td>
                                            <td>@Html.DisplayFor(a => aprendiz.nomEstadoAprendiz)</td>
                                            <td>@Html.DisplayFor(a => aprendiz.nomEstadoTyt)</td>
                                            <td>
                                                <a class="btn btn-success" asp-action="Crear" asp-controller="Seguimiento" asp-route-nmDoc="@aprendiz.NumeroDocumentoAprendiz">Seguimiento</a>
                                            </td>

                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#searchInput').on('input', function () {
                var searchValue = $(this).val().toLowerCase();
                $('#tbdata2 tbody tr').filter(function () {
                    $(this).toggle($(this).find('td:first-child').text().toLowerCase().indexOf(searchValue) > -1)
                });
            });
        });
    </script>
}