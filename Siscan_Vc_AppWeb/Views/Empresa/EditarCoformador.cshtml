@{
    ViewData["Title"] = "EditarCoformador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Siscan_Vc_DAL.DataContext.Coformador

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="fondomenu py-3 px-5 ">
                    <img src="~/img/entrenador.png" alt="Alternate Text" width="50" />
                    <h3 class="m-0 text-uppercase font-weight-bold text-white ">Coformador Empresa</h3>
                </div>
                <div class="card-body">
                    @if (TempData["ActualizaCoformdrExit"] != null)
                    {
                        <div class="alert alert-success" role="alert"> @TempData["ActualizaCoformdrExit"] </div>
                        <script>
                            setTimeout(function () {
                                window.location.href = '@Url.Action("consultar", "Empresa")';
                            }, 3000);
                        </script>
                    }
                    @if (TempData["EmpresaNoExist"] != null)
                    {
                        <div class="alert alert-danger" role="alert"> @TempData["EmpresaNoExist"] </div>
                    }
                    <form id="registroForm" asp-action="EditarCoformador">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="NumeroDocumentoCoformador" class="form-control" id="inputDocumento" type="text" placeholder="Numero de documento" readonly/>
                                    <label for="inputName">Numero de documento</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input asp-for="NombreCoformador" class="form-control" id="inputName" type="text" placeholder="Nombres" />
                                    <label for="inputName">Nombres</label>
                                    <span asp-validation-for="NombreCoformador" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input asp-for="ApellidoCoformador" class="form-control" id="inputLastName" type="text" placeholder="Apellidos" />
                                    <label for="inputLastName">Apellidos</label>
                                    <span asp-validation-for="ApellidoCoformador" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="CorreoCoformador" class="form-control" id="inputEmail" type="email" placeholder="name@example.com" />
                                    <label for="inputEmail">Correo</label>
                                    <span asp-validation-for="CorreoCoformador" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input asp-for="CelCoformador" class="form-control" id="inputCelular" type="tel" placeholder="Celular" />
                                    <label for="inputCelular">Celular</label>
                                    <span asp-validation-for="CelCoformador" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input asp-for="NitEmpresa" class="form-control" id="inputDireccion" type="text" placeholder="NIT de la Empresa " />
                                    <label for="inputDireccion">NIT Empresa</label>
                                    <span asp-validation-for="NitEmpresa" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="mt-4 mb-0">
                            <div class="d-grid boton2">
                                <button type="submit" class="btn text-center btn-block" data-bs-toggle="modal" data-bs-target="#RegistroCoformadorModal">Actualizar</button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>